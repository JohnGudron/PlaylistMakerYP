<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/main_activity_background"
    android:backgroundTint="@color/main_activity_background"
    android:paddingHorizontal="@dimen/common_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_text_size"
        android:text="@string/app_name"
        android:paddingTop="14dp"
        android:paddingBottom="@dimen/common_padding"
        android:background="@color/main_activity_background"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/searchBtn"

        android:layout_marginTop="24dp"
        android:text="@string/search_btn"
        app:icon="@drawable/ic_search"
        style="@style/MainButtonStyle"
        />

    <Button
        android:id="@+id/mediaBtn"
        android:layout_marginVertical="@dimen/little_indent"
        android:text="@string/media_btn"
        app:icon="@drawable/media_library"
        style="@style/MainButtonStyle"
        />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings"
        style="@style/MainButtonStyle"/>

</LinearLayout>