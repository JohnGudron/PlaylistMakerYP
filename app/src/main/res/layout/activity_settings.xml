<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:paddingStart="4dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="@string/settings"
            android:textColor="@color/header_text"
            android:textSize="@dimen/main_text_size" />


    </LinearLayout>

    <FrameLayout
        style="@style/SettingsFrameStyle"
        android:layout_marginTop="24dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switcher"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginVertical="21dp"
            android:text="@string/dark_theme"
            android:textColor="@color/main_text"
            android:textSize="@dimen/settings_text_size"
            android:theme="@style/Base.Theme.PlaylistMaker"
            app:switchMinWidth="35dp" />

    </FrameLayout>

    <FrameLayout style="@style/SettingsFrameStyle">

        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/share_the_app" />

        <ImageView
            android:id="@+id/share_btn"
            style="@style/SettingsImageStyle"
            android:src="@drawable/ic_share" />

    </FrameLayout>

    <FrameLayout style="@style/SettingsFrameStyle">

        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/write_to_support" />

        <ImageView
            android:id="@+id/support_btn"
            style="@style/SettingsImageStyle"
            android:src="@drawable/ic_support" />


    </FrameLayout>

    <FrameLayout style="@style/SettingsFrameStyle">

        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/user_agreement" />

        <ImageView
            android:id="@+id/agreement_btn"
            style="@style/SettingsImageStyle"
            android:src="@drawable/ic_agreement" />

    </FrameLayout>


</LinearLayout>